<Ui xsi:schemaLocation="C:\Program Files (x86)\World of Warcraft\_retail_\BlizzardInterfaceCode\Interface\FrameXML\UI.xsd">
    <Frame name="HF_GroupFrame" hidden="false" virtual="true" movable="true">
        <Scripts>
            <OnLoad>
                print("HF_GroupFrame loaded.")
            </OnLoad>
        </Scripts>
        <Layers>
            <!-- Remove when debugging has finished. -->
            <Layer level="BACKGROUND">
                <Texture>
                    <Color r="0" g="1" b="0" a="0.1"/>
                </Texture>
            </Layer>
        </Layers>

        <Frames>
            <Frame name="DragFrame" hidden="false" virtual="true" enableMouse="true">
                <Size x="100" y="100" />
                <Anchors>
                    <Anchor point="TOPRIGHT" relativePoint="TOPLEFT" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                    <Texture>
                        <Size x="100" y="100" />
                        <Color r="1" g="0" b="0" a="0.1"/>
                    </Texture>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnMouseDown>
                        StartDrag();
                    </OnMouseDown>
                    <OnMouseUp>
                        StopDrag();
                    </OnMouseUp>
                </Scripts>
            </Frame>
        </Frames>

    </Frame>
</Ui>
